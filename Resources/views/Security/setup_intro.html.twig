{% extends '@MauticUser/Security/base.html.twig' %}

{% block headerTitle %}
    {{ 'mautic.twofactor.setup.intro.title'|trans }}
{% endblock %}

{% block content %}
    <style>
        .twofactor-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .twofactor-card {
            max-width: 420px;
            width: 100%;
        }

        .twofactor-intro-buttons .btn {
            flex: 1;
            justify-content: center;
        }

        .setup-steps {
            text-align: left;
        }
    </style>

    <div class="twofactor-wrapper">
        <div class="card shadow-sm border-0 p-4 twofactor-card text-center">
            <span class="text-muted medium text-uppercase fw-bold d-block mb-2">
                {{ 'mautic.twofactor.setup.step_one'|trans }}
            </span>

            <h3 class="fw-bold mb-4">{{ 'mautic.twofactor.setup.intro.title'|trans }}</h3>

            <p class="text-muted medium fw-bold mb-4">
                {{ 'mautic.twofactor.setup.intro.instructions'|trans }}
            </p>

            <div class="setup-steps text-start text-muted mb-4">
                <div class="mb-2">
                    <div class="fw-bold text-lg mb-4">
                        <b>{{ 'mautic.twofactor.setup.intro.step_one_label'|trans }}</b>
                    </div>
                    
                    <p class="mb-6 medium">
                        {{ 'mautic.twofactor.setup.intro.step_one_description'|trans }}
                    </p>
                </div>
                <div class="mb-2">
                    <div class="fw-bold text-lg mb-4">
                        <b>{{ 'mautic.twofactor.setup.intro.step_two_label'|trans }}</b>
                    </div>
                    <p class="mb-6 medium">
                        {{ 'mautic.twofactor.setup.intro.step_two_description'|trans }}
                    </p>
                </div>
                <div>
                    <div class="fw-bold text-lg mb-4">
                        <b>{{ 'mautic.twofactor.setup.intro.step_three_label'|trans }}</b>
                    </div>
                    <p class="mb-6 medium">
                        {{ 'mautic.twofactor.setup.intro.step_three_description'|trans }}
                    </p>
                </div>
            </div>
            <div class="d-flex gap-2 twofactor-intro-buttons mb-4">
                <a
                    class="btn btn-success btn-sm d-flex align-items-center justify-content-center"
                    href="https://apps.apple.com/app/google-authenticator/id388497605"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    {# Apple icon SVG #}
                    <svg
                        class="me-2"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                        aria-hidden="true"
                        focusable="false"
                    >
                        <path
                            d="M16.5 2.5c-.9.1-1.9.5-2.5 1.2-.6.6-1.1 1.7-1 2.7 1-.1 2-.6 2.6-1.3.6-.7 1.1-1.7 1-2.6zM19.1 8.3c-.1-.1-1.9-1.5-3.9-1.5-1 .1-1.7.4-2.3.4-.6 0-1.5-.4-2.5-.4-1.8.1-3.5 1.1-4.4 2.7-1.9 3.3-.5 8.1 1.4 10.7.7 1 1.6 2.1 2.8 2.1 1.1 0 1.4-.7 2.8-.7 1.4 0 1.6.7 2.8.7 1.2 0 2-1 2.7-2 .8-1.2 1.1-2.3 1.1-2.4-.1-.1-2.1-.8-2.1-3.1 0-1.9 1.6-2.8 1.7-2.9-.9-1.4-2.4-1.6-2.8-1.6z"
                            fill="currentColor"
                        />
                    </svg>

                    {{ 'mautic.twofactor.setup.intro.install_ios'|trans }}
                </a>

                <a
                    class="btn btn-success btn-sm d-flex align-items-center justify-content-center"
                    href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    {# Android icon SVG #}
                    <svg
                        class="me-2"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                        aria-hidden="true"
                        focusable="false"
                    >
                        <path
                            d="M7.5 4.3 6.1 2.4a.3.3 0 0 1 .5-.3l1.5 2a6.6 6.6 0 0 1 3.9-1.2c1.4 0 2.7.4 3.9 1.2l1.5-2a.3.3 0 0 1 .5.3l-1.4 1.9A5.9 5.9 0 0 1 19 8v7.8c0 .7-.6 1.2-1.3 1.2h-.7v2.4c0 .4-.3.6-.7.6h-1c-.4 0-.7-.2-.7-.6V17H9.4v2.4c0 .4-.3.6-.7.6h-1c-.4 0-.7-.2-.7-.6V17h-.7c-.7 0-1.3-.5-1.3-1.2V8c0-1.5.5-2.9 1.4-3.7zM9 7.1a.8.8 0 1 0 0-1.5.8.8 0 0 0 0 1.5zm6 0a.8.8 0 1 0 0-1.5.8.8 0 0 0 0 1.5z"
                            fill="currentColor"
                        />
                    </svg>

                    {{ 'mautic.twofactor.setup.intro.install_android'|trans }}
                </a>
            </div>

            <div class="d-grid">
                <a href="{{ setupNextUrl }}" class="btn btn-primary btn-sm text-center fw-bold">
                    {{ 'mautic.twofactor.setup.intro.next_button'|trans }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}
